{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "This is the schema for the main Scenario file for the game. It basically a skeleton, pulling in other more substantial types from other files. It could be split up, but for now its easier managing three files Scenario, Schema and Objects",
    "type": "object",
    "definitions": {
        "reaction_type": {
            "type": "object",
            "allOf": [
                {
                    "$ref": "Script/Script.json#/definitions/script_type"
                }
            ],
            "properties": {
                "flag1": {
                    "$ref": "HospObjects.json#/definitions/flag_type"
                },
                "flag2": {
                    "$ref": "HospObjects.json#/definitions/flag_type"
                },
                "inv1": {
                    "$ref": "HospObjects.json#/definitions/inv_type"
                },
                "inv2": {
                    "$ref": "HospObjects.json#/definitions/inv_type"
                },
                "inv3": {
                    "$ref": "HospObjects.json#/definitions/inv_type"
                },
                "prop1": {
                    "$ref": "HospObjects.json#/definitions/prop_type"
                },
                "prop2": {
                    "$ref": "HospObjects.json#/definitions/prop_type"
                },
                "prop3": {
                    "$ref": "HospObjects.json#/definitions/prop_type"
                },
                "prop4": {
                    "$ref": "HospObjects.json#/definitions/prop_type"
                },
                "prop5": {
                    "$ref": "HospObjects.json#/definitions/prop_type"
                },
                "prop6": {
                    "$ref": "HospObjects.json#/definitions/prop_type"
                },
                "restrictions": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/char_wrapper_type"
                    }
                }
            }
        },
        "char_wrapper_type": {
            "type": "object",
            "required": [ "char" ],
            "properties": {
                "char": {
                    "$ref": "HospObjects.json#/definitions/char_type"
                }
            }
        },
        "prop_wrapper_type": {
            "type": "object",
            "required": [ "prop" ],
            "properties": {
                "prop": {
                    "$ref": "HospObjects.json#/definitions/prop_type"
                }
            }
        }
    },
    "properties": {

        "startingPropsArray": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "HospObjects.json#/definitions/prop_type"
            }
        },
        "startingThings": {
            "type": "array",
            "minItems": 1,
            "items": {

                "type": "object",
                "properties": {
                    "char": {
                        "$ref": "HospObjects.json#/definitions/char_type"
                    },
                    "thing": {
                        "oneOf": [
                            {
                                "$ref": "HospObjects.json#/definitions/inv_type"
                            },
                            {
                                "$ref": "HospObjects.json#/definitions/flag_type"
                            }
                        ]
                    }
                }
            }
        },

        "goalPropName": {
            "$ref": "HospObjects.json#/definitions/prop_type"
        },
        "reactions": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/reaction_type"
            }
        },

        "startingProps": {
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "#/definitions/prop_wrapper_type"
            }
        }
    }
}
